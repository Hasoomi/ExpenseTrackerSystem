<div class="card card-register mx-auto mt-5">
    <div class="card-header">Register an Account</div>
    <div class="card-body">
        <form action="/Reg" method="post">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-12">
                        <label for="exampleInputName">Full Name</label>
                        <input name="name" class="form-control" id="exampleInputName" type="text" aria-describedby="nameHelp" placeholder="Fullname" required>
                    </div>
                    <div class="col-md-6">
                        <label for="exampleInputLastName">Username</label>
                        <input name="username" class="form-control" id="exampleInputLastName" type="text" aria-describedby="nameHelp" placeholder="Username" required>
                    </div>
                    <div class="col-md-6">
                        <label for="exampleInputEmail1">Passwrod</label>
                        <input name="password" class="form-control" id="exampleInputEmail1" type="password" aria-describedby="emailHelp" placeholder="Password" required>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <label for="exampleInputPassword1">Eamil</label>
                        <input name="email" class="form-control" id="exampleInputPassword1" type="email" placeholder="Email" required>
                    </div>
                    <div class="col-md-6">
                        <label for="exampleConfirmPassword">Phone</label>
                        <input name="phone" class="form-control" id="exampleConfirmPassword" type="text" placeholder="Phone number" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </form>
        <div class="text-center">
            <a class="d-block small mt-3" href="/login">Login Page</a>
            <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
            <a class="d-block small" href="/">Home Page?</a>
        </div>
    </div>
</div>